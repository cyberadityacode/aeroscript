{
    "name": "AeroScript",
    "type": "dark",
    "colors": {
        // --- BASE UI (The Antigravity Shell) ---
        "editor.background": "#160101a6",
        "editor.foreground": "#E0E6F1",
        "activityBar.background": "#05070A",
        "activityBar.foreground": "#00F0FF",
        "sideBar.background": "#080A0F",
        "sideBar.border": "#00000000", 
        "editor.lineHighlightBackground": "#1A1D26",
        "editorCursor.foreground": "#00F0FF",
        
        // --- THE GLOW EFFECT ---
        "editor.selectionBackground": "#00F0FF33",
        "editor.selectionHighlightBackground": "#00F0FF22",
        "editor.wordHighlightBackground": "#82AAFF25",
        "editorBracketMatch.background": "#00F0FF25",
        "editorBracketMatch.border": "#00F0FF",
        "editorLineNumber.activeForeground": "#00F0FF",
        "editorIndentGuide.activeBackground": "#00F0FF66",
        
        // --- BRACKET PAIR COLORIZATION (Weightless Rainbow) ---
        "editorBracketHighlight.foreground1": "#00F0FF",
        "editorBracketHighlight.foreground2": "#C792EA",
        "editorBracketHighlight.foreground3": "#FFCB6B",
        "editorBracketHighlight.unexpectedBracket.foreground": "#FF5370",

        // --- UI ELEMENTS ---
        "button.background": "#00F0FFCC",
        "button.foreground": "#0B0E14",
        "input.background": "#1A1D26",
        "focusBorder": "#00F0FF33",
        "statusBar.background": "#05070A",
        "statusBar.foreground": "#71f0f0",
        "titleBar.activeBackground": "#000000",
        "titleBar.activeForeground": "#71f0f0"
    },
    "tokenColors": [
        // --- 1. WEB TAGS (HTML/JSX) ---
        {
            "name": "Tags",
            "scope": ["entity.name.tag", "meta.tag.sgml", "punctuation.definition.tag"],
            "settings": { "foreground": "#F07178" }
        },
        {
            "name": "Attributes",
            "scope": ["entity.other.attribute-name"],
            "settings": { "foreground": "#C792EA", "fontStyle": "italic" }
        },

        // --- 2. JAVASCRIPT & LOGIC ---
        {
            "name": "Keywords & Control",
            "scope": ["keyword", "storage.type", "storage.modifier", "keyword.control"],
            "settings": { "foreground": "#C792EA", "fontStyle": "italic" }
        },
        {
            "name": "Async/Await Flow",
            "scope": ["keyword.control.flow", "storage.type.js", "storage.type.ts"],
            "settings": { "foreground": "#00F0FF", "fontStyle": "bold" }
        },
        {
            "name": "Functions",
            "scope": ["entity.name.function", "meta.function-call", "support.function"],
            "settings": { "foreground": "#82AAFF" }
        },

        // --- 3. CSS / STYLING ---
        {
            "name": "CSS Class/ID",
            "scope": ["entity.other.attribute-name.class.css", "entity.other.attribute-name.id.css"],
            "settings": { "foreground": "#FFCB6B" }
        },
        {
            "name": "CSS Properties",
            "scope": ["support.type.property-name.css"],
            "settings": { "foreground": "#EEFFFF" }
        },
        {
            "name": "CSS Values",
            "scope": ["support.constant.property-value.css", "constant.numeric.css"],
            "settings": { "foreground": "#C3E88D" }
        },

        // --- 4. JSON & DATA ---
        {
            "name": "JSON Keys",
            "scope": ["support.type.property-name.json"],
            "settings": { "foreground": "#C792EA" }
        },
        {
            "name": "Strings & Symbols",
            "scope": ["string", "constant.other.symbol"],
            "settings": { "foreground": "#C3E88D" }
        },
        {
            "name": "Numbers & Booleans",
            "scope": ["constant.numeric", "constant.language.boolean"],
            "settings": { "foreground": "#F78C6C" }
        },

        // --- 5. ATMOSPHERE ---
        {
            "name": "Comments",
            "scope": ["comment", "punctuation.definition.comment"],
            "settings": { "foreground": "#546E7A", "fontStyle": "italic" }
        }

		
    ]

	
}